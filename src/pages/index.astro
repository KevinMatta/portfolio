								bar.style.width = `${value}%`;
								bar.classList.add('is-visible');
								obs.unobserve(bar);
							});
						},
						{ threshold: 0.5 }
					);

					bars.forEach((bar) => observer.observe(bar));
				}

				const skillCard = document.querySelector('[data-skill-card]');
				if (skillCard) {
					const tabs = skillCard.querySelectorAll('[data-skill-tab]');
					const setTab = (next) => {
						skillCard.dataset.skillView = next;
						tabs.forEach((tab) => tab.classList.toggle('is-active', tab.dataset.skillTab === next));
					};
					tabs.forEach((tab) => {
						tab.addEventListener('click', () => setTab(tab.dataset.skillTab));
					});
				}
			</script>
		</main>
	</body>
