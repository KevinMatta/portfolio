---
const { id = 'stars-canvas' } = Astro.props;
import starsScript from '../scripts/stars.js?url';
---

<canvas id={id} class="stars-canvas" aria-hidden="true" data-stars></canvas>
<script type="module" src={starsScript}></script>

<style>
  .stars-canvas {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    opacity: 0.9;
  }
</style>
