---
const { id = 'stars-canvas' } = Astro.props;
---

<canvas id={id} class="stars-canvas" aria-hidden="true"></canvas>

<script type="module">
  import { tsParticles } from 'tsparticles';

  const canvasId = '{id}';
  const target = document.getElementById(canvasId);

  if (target) {
    tsParticles.load({
      id: canvasId,
      options: {
        fullScreen: { enable: false },
        background: { color: 'transparent' },
        detectRetina: true,
        fpsLimit: 60,
        interactivity: {
          events: {
            onHover: { enable: false },
            onClick: { enable: false },
            resize: true,
          },
        },
        particles: {
          color: { value: ['#7df9ff', '#8b5cff', '#ffffff'] },
          links: { enable: false },
          move: {
            direction: 'none',
            enable: true,
            outModes: { default: 'out' },
            speed: 0.12,
            straight: false,
          },
          number: {
            density: { enable: true, width: 900, height: 900 },
            value: 60,
          },
          opacity: {
            value: { min: 0.3, max: 0.75 },
            animation: { enable: true, speed: 0.3, minimumValue: 0.2 },
          },
          shape: { type: 'circle' },
          size: {
            value: { min: 0.6, max: 1.8 },
          },
        },
      },
    });
  }
</script>

<style>
  .stars-canvas {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    opacity: 0.7;
  }
</style>
